# Mail Archive â€” Environment Configuration
# Copy to .env and fill in your values.

# Public URL for OAuth callbacks
BASE_URL=http://localhost:8080

# Docker user/group IDs (match host user)
DOCKER_UID=1000
DOCKER_GID=1000

# --- OAuth Providers (at least one required for login) ---

# GitHub: https://github.com/settings/applications/new
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook: https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# --- S3-compatible storage (optional) ---
# Use with: docker compose --profile s3 up minio
# MinIO defaults: http://localhost:9900 (S3 API), minioadmin/minioadmin
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_USE_SSL=true
